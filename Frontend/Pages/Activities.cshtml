@page
@using studenthousing.Models;
@model studenthousing.Pages.ActivitiesModel

<h2>Activiteiten</h2>
<hr>
<p>Maak een nieuwe activiteit aan.</p>
<hr>

<partial name="_ValidationScriptsPartial" />

<form method="post" class="mb-4">
    <div class="row g-3 align-items-end">
        <div class="col-md">
            <label class="form-label">Activiteit:</label>
            <input asp-for="NewActivity.Name" class="form-control" />
            <span asp-validation-for="NewActivity.Name" class="text-danger"></span>
        </div>
        <div class="col-md">
            <label class="form-label">Locatie:</label>
            <input asp-for="NewActivity.Place" class="form-control" />
            <span asp-validation-for="NewActivity.Place" class="text-danger"></span>
        </div>
        <div class="col-md">
            <label class="form-label">Kosten:</label>
            <input asp-for="NewActivity.Price" class="form-control" />
            <span asp-validation-for="NewActivity.Price" class="text-danger"></span>
        </div>
        <div class="col-md">
            <label class="form-label">Aantal:</label>
            <input asp-for="NewActivity.Amount" class="form-control" />
            <span asp-validation-for="NewActivity.Amount" class="text-danger"></span>
        </div>
        <div class="col-md">
            <label class="form-label">Datum:</label>
            <input asp-for="NewActivity.Date" class="form-control" />
            <span asp-validation-for="NewActivity.Date" class="text-danger"></span>
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">Voeg toe</button>
        </div>
    </div>
</form>

<hr>
<h6>Hier vind je de geplande activiteiten voor de komende twee weken.</h6>
<hr>

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Activiteit</th>
            <th>Locatie</th>
            <th>kosten</th>
            <th>Aantal deelnemers</th>
            <th>Datum</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var activity in Model.Activity)
        {
            <tr>
                <td>@activity.Name</td>
                <td>@activity.Place</td>
                <td>@activity.Price</td>
                <td>@activity.Amount</td>
                <td>@activity.Date</td>
                @* <td>
                    <form method="post" asp-page-handler="Signup">
                        <input type="hidden" name="ActivityId" value="@activity.Id" />
                        <button type="submit">Aanmelden</button>
                    </form>
                </td> *@
            </tr>
        }
    </tbody>
        
       
</table>