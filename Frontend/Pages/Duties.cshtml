<hr>
<h6>Hier vind je de geplande taken voor de komende twee weken.</h6>
<hr>

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Taak</th>
            <th>Beschrijving</th>
            <th>Hoeveel mensen nodig</th>
            <th>Prioriteit</th>
            <th>Taakgrootte</th>
            <th>Datum</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var duty in Model.Duty)
        {
            <tr>
                <td>@duty.Name</td>
                <td>@duty.Description</td>
                <td>@duty.AmountOfPeople</td>
                <td>@duty.Priority</td>
                <td>@duty.TaskSize</td>
                <td>@duty.Date</td>
            </tr>
        }
    </tbody>
       
</table>
 